= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.rich_text_area :content
  .field
    = f.label :topic
    = f.select :topic, [["Ziņās", 0], ["Reklāma", 1], ["Sludinājums", 2]]
  .actions
    = f.submit 'Save'
